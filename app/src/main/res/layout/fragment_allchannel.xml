<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_channel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_channel_back"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/channel_title"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_channel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_channel_one"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ripple_bg">

                <TextView
                    android:id="@+id/tv_channel_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/channel_one"
                    android:textColor="@color/text_black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_allchannelone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="------"
                    android:textSize="70sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/setting_setup2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_black"
                    android:text="@string/channel_one" />

                <TextView
                    android:id="@+id/tv_allchannel1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_channel_two"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ripple_bg">

                <TextView
                    android:id="@+id/tv_channel_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/channel_two"
                    android:textColor="@color/text_black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_allchanneltwo_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="-----"
                    android:textSize="80sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/setting_setup2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_black" />

                <TextView
                    android:id="@+id/tv_allchannel2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_channel_three"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ripple_bg">

                <TextView
                    android:id="@+id/tv_channel_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/channel_three"
                    android:textColor="@color/text_black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_allchannelthree_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="-----"
                    android:textSize="80sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/setting_setup2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_black" />

                <TextView
                    android:id="@+id/tv_allchannel3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_channel_four"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ripple_bg">

                <TextView
                    android:id="@+id/tv_channel_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/channel_four"
                    android:textColor="@color/text_black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_allchannelfour_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="-----"
                    android:textSize="80sp" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:src="@drawable/setting_setup2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/text_black" />

                <TextView
                    android:id="@+id/tv_allchannel4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textSize="20sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>