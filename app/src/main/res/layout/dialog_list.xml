<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/dailog_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#313030"
        >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/dialog_title"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/dialog_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/qw" />
        <ImageView
            android:id="@+id/dialog_search_b"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/progress_anim"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dailog_relativelayout"
        android:background="@color/white" />

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dailog_relativelayout"
        android:layout_margin="5dp"></ListView>

</RelativeLayout>